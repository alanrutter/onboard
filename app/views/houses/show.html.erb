<h2><%= @house.title %></h2>

<div class="address">

	<%= @house.address %>

</div>

<div class="image">
	<%= image_tag @house.image.url %>
</div>

<div class="map">
</div>

<div class="description">
	<%= simple_format @house.description %>
</div>

<div class="user">
	<%= @house.user %>
</div>

<div class="actions">
	<%= link_to "Book room", new_order_path, class: 'button' %>
	<%= link_to "Edit", edit_house_path(@house.id), class: 'button' %>
	<%= link_to "Delete", house_path(@house.id), method: :delete, class: 'button' %>
</div>